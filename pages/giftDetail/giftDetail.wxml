        <image src="{{utils.getFullImgUrl(goods_info.picture)}}" class="slide-image" mode="aspectFill" bindtap="previewImage" data-src="{{utils.getFullImgUrl(goods_info.picture)}}" />
    </swiper-item>
</swiper>
<!--商品幻灯片 end-->
