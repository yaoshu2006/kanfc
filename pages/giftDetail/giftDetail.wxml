<!--隐藏地址区域  -->
<view class='maskLayer' wx:if="{{chooseAddress}}" bindtap='hideModal'>
    <span>X</span>
</view>
<view class='choose' wx:if="{{chooseAddress}}" animation='{{animationData}}'>
    <view class="phone-box">
        <view class="check-box">
            <view class="title">输入收货人姓名</view>
            <input class="input" type="text" value="{{oldUserPhone}}" placeholder="姓名" bindblur="checkOldPhone" />
        </view>
        <view class="check-box">
            <view class="title">输入收货人手机号</view>
            <input class="input" type="number" value="{{oldUserPhone}}" placeholder="手机号码" bindblur="checkOldPhone" />
        </view>
        <view class="edit-box">
            <view class="title">收入收货地址</view>
            <input class="input new-phone" type="number" value="{{newUserPhone}}" placeholder="收货地址" bindinput="updateNewPhone" />

        </view>
        <button class="bind-btn" type="primary" hover-class="none" disabled="{{isNotSubmit}}" bindtap="submit">确认</button>
    </view>
</view>
