.canvas{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0rpx;     
  background-color: rgba(0,0,0,0.2);
}
 
.preview{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  /* background-color:rgba(0,0,0,0.1); */
  z-index: 2;
  text-align: center;
  display:flex; 
  flex-flow:column;
}
 
.preview image{
  width: 80%;
  height: 80%;
  margin: 5% 10% 10% 10%;
  margin-bottom: 5%;
  box-shadow:0 0 20px 0 #000000;
}
.preview2 image{
  width: 80%;
  height: 80%;
  margin: 5% 10% 10% 10%;
  margin-bottom: 5%;
  box-shadow:0 0 20px 0 #000000;
}
 
.preview button{
  margin:0 20rpx;
  border-radius:50px;
  /* background-color:#ee2a65; */
  background: linear-gradient(to right, #ff7a34, #ee32ff);
  width:40%;
}
.upImage{
  color: #999;
  font-size: 23rpx;
  padding-top: 10rpx;
  font-family: Arial, Helvetica, sans-serif
}
